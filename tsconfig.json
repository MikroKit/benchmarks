{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": ["es6", "ES2021"],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "compiled-apps",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "reflection": true,
  "include": ["apps"],
  "exclude": ["node_modules", "**/*.spec.ts", "examples", ".dist"]
}
