{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "lib": ["es6", "ES2021"],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "_compiled-apps",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "reflection": true,
  "include": ["apps", "apps/src/mionAppBun.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "examples", ".dist"]
}
